{
    "manifest_version": 3,
    "name": "Tracer",
    "version": "2.0.0",
    "description": "See how any website is built â€” colors, typography, and tech stack for design engineers",
    "permissions": [
        "sidePanel",
        "activeTab",
        "scripting",
        "storage",
        "tabs",
        "webRequest"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "side_panel": {
        "default_path": "src/sidepanel/index.html"
    },
    "action": {
        "default_title": "Open Tracer",
        "default_icon": {
            "16": "src/assets/icons/favicon.png",
            "32": "src/assets/icons/favicon.png",
            "48": "src/assets/icons/favicon.png",
            "128": "src/assets/icons/favicon_256.png"
        }
    },
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/index.ts"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "src/assets/icons/favicon.png",
        "32": "src/assets/icons/favicon.png",
        "48": "src/assets/icons/favicon.png",
        "128": "src/assets/icons/favicon_256.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "src/assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}